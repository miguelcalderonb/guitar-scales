{
  "name": "guitar-scales",
  "version": "1.0.0",
  "description": "guitar-scales is a javascript modular for get guitar scales",
  "main": "dist/guitar-scales.min.js",
  "scripts": {
    "test": "jest",
    "start": "nodemon --exec babel-node ./src/index.js",
    "watch": "webpack --watch",
    "build": "webpack --config webpack.config.js",
    "start:prod": "nodemon dist/guitar-scales.min.js"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/miguelcalderonb/guitar-scales"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": "commonjs",
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      },
      "development": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": "commonjs",
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transformIgnorePatterns": [
      "node_modules"
    ]
  },
  "author": "miguelcalderonbproject@gmail.com",
  "license": "MIT",
  "dependencies": {
    "tonal": "^2.2.2"
  },
  "devDependencies": {
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "jest": "^24.8.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  }
}
